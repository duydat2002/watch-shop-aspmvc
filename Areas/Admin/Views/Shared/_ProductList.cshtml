@model List<Product>

@if (Model.Count == 0)
{
  <div class="flex">
    <span>No product to add.</span>
  </div>
}

@foreach (var product in Model)
{
  string[] alts = @product.ProductImages.Split(',');

  <div class="product-item">
    <div class='product-image'>
      <img src='~/image/products/@alts[0]' alt='@alts[0]'>
    </div>
    <div class="product-name text-overflow">@product.ProductName</div>
    <div class="product-check add-product" onclick=addProductCategory(@product.ProductId)>
      <i class="fa-solid fa-plus"></i>
    </div>
  </div>
}
