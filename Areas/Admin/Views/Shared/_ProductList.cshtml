@model List<ProductModel>

@if (Model.Count == 0)
{
  <div class="flex">
    <span>No product to add.</span>
  </div>
}

@foreach (ProductModel product in Model)
{
  string[] alts = @product.ProductImages.Split(',');

  <div class="product-item">
    <div class="product-checkbox">
      <input class="checkbox" type="checkbox" name="products">
      <i class='fas fa-check checkbox-icon'></i>
    </div>
    <div class='product-image'>
      <img src='~/image/products/@alts[0]' alt='@alts[0]'>
    </div>
    <div class="product-name text-overflow">@product.ProductName</div>
  </div>
}
