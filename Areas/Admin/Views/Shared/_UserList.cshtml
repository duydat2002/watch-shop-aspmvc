@model List<UserWithRoleName>

@if (Model.Count == 0)
{
  <div class="flex">
    <span>No user to add.</span>
  </div>
}

@foreach (var user in Model)
{
  <div class="user-item">
    <div class="user-name text-overflow">@user.FullName</div>
    <div class="user-email text-overflow">@user.Email</div>
    <div class="product-check add-product" onclick="addUserAdmin(@user.UserId)">
      <i class="fa-solid fa-plus"></i>
    </div>
  </div>
}
