@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<Role>


@{
  ViewData["Title"] = "Roles";
  ViewBag.NavActive = "Role";
}


<h3 class="page-title">Roles</h3>
<div class="breakcrumb">
  <span class="breakcrumb-root">Manage</span>
  <i class="fa-solid fa-angles-right"></i>
  <span><a href="/admin/user/roles">Roles</a></span>
</div>
<div class="content">
  <div class="card list-container">
    <div class="card-header">
      <span class="card-title">Role List</span>
    </div>
    <div class="card-body">
      <div class="card-body-scroll">
        <table class="table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Role Name</th>
              <th>Users</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var role in Model)
            {
              <tr>
                <td>@role.RoleId</td>
                <td>@role.RoleName</td>
                <td>@role.UserCount</td>
                <td>
                  <div class="table-actions">
                    <a href="/admin/user/roles/@role.RoleId" class="action-item view bg-info text-info">
                      <i class="fa-regular fa-eye "></i>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer">
      @Html.PagedListPager(Model, page => Url.Action("Roles",
             new { page }),
             new PagedListRenderOptions
      {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        MaximumPageNumbersToDisplay = 5,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always
      })
    </div>
  </div>
</div>

@section JS {
  <script>
  </script>
}