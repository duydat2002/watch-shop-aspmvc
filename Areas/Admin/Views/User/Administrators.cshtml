@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<UserWithRoleName>


@{
  ViewData["Title"] = "Administrators";
  ViewBag.NavActive = "Administrator";

  int UserId = Context.Session.GetInt32("UserId") ?? 0;
}


<h3 class="page-title">Administrators</h3>
<div class="breakcrumb">
  <span class="breakcrumb-root">Manage</span>
  <i class="fa-solid fa-angles-right"></i>
  <span><a href="/admin/user/administrators">Administrators</a></span>
</div>
<div class="content">
  <div class="actions">
    <a href="/admin/user/administrators/create" class="button button-gb create-button">Create Admin</a>
  </div>
  <div class="card list-container">
    <div class="card-header">
      <span class="card-title">Administrator List</span>
    </div>
    <div class="card-body">
      <div class="card-body-scroll" id="user_list_card">
        <table class="table">
          <thead>
            <tr>
              <th>Id</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Birthdate</th>
              <th>Active</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var user in Model)
            {
              <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@(user.Gender ? "Male" : "Female")</td>
                <td>@user.Birthdate</td>
                <td>
                  @if (user.Active)
                  {
                    <span class="badge badge-success">Active</span>
                  }
                  else
                  {
                    <span class="badge badge-danger">Unactive</span>
                  }
                </td>
                <td>
                  <div class="table-actions">
                    <a href="/admin/user/administrators/@user.UserId" class="action-item view bg-info text-info">
                      <i class="fa-regular fa-eye "></i>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer">
      @Html.PagedListPager(Model, page => Url.Action("Administrators",
             new { page }),
             new PagedListRenderOptions
      {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        MaximumPageNumbersToDisplay = 5,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
        DisplayLinkToNextPage = PagedListDisplayMode.Always
      })
    </div>
  </div>
</div>